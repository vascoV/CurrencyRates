<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/primaryTextColor</item>
        <item name="android:textColor">@color/primaryTextColor</item>
    </style>

    <style name="CurrencyTextStyle">
        <item name="android:textColor">@color/color_grey_900</item>
    </style>

    <style name="CurrencySymbolStyle" parent="CurrencyTextStyle">
        <item name="android:textSize">22sp</item>
    </style>

    <style name="CurrencyNameStyle" parent="CurrencyTextStyle">
        <item name="android:textColor">@color/color_grey_700</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="CurrencyValueStyle" parent="CurrencyTextStyle">
        <item name="android:textSize">24sp</item>
    </style>
</resources>
